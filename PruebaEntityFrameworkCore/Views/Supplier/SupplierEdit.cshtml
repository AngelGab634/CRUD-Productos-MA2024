@model SupplierModel

@{
    ViewData["Title"] = "Editar el proveedor";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="SupplierEdit" asp-controller="Supplier">
    <input type="hidden" asp-for"Id">

    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Name" placeholder="Nombre del Proveedor">
        <label asp-for="Name">Nombre del Proveedor</label>
    </div>


    <button class="btn btn-outline-primary">Guardar</button>
    <a class="btn btn-outline-secundary" asp-action="SupplierList" asp-controller="Supplier">Regresar</a>
</form>
